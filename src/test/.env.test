# General Configuration
# Node environment identifier
NODE_ENV=test
# Test environment identifier
TEST_ENV=test
# Global test timeout in milliseconds
TEST_TIMEOUT=30000

# Database Configuration
# MongoDB test database connection string
TEST_MONGODB_URI=mongodb://localhost:27017/test_chat_db
# PostgreSQL test database connection string
TEST_POSTGRES_URI=postgresql://localhost:5432/test_user_db
# Redis test instance connection string
TEST_REDIS_URI=redis://localhost:6379/0
# Milvus vector database test connection string
TEST_MILVUS_URI=localhost:19530

# Service Configuration
# API Gateway test endpoint
TEST_API_GATEWAY_URL=http://localhost:3000
# Message service test endpoint
TEST_MESSAGE_SERVICE_URL=http://localhost:3001
# AI service test endpoint
TEST_AI_SERVICE_URL=http://localhost:3002
# User service test endpoint
TEST_USER_SERVICE_URL=http://localhost:3003
# Preference service test endpoint
TEST_PREFERENCE_SERVICE_URL=http://localhost:3004
# WebSocket test endpoint
TEST_WEBSOCKET_URL=ws://localhost:3001

# Security Configuration
# JWT secret key for test environment
TEST_JWT_SECRET=test_jwt_secret
# API key for test environment
TEST_API_KEY=test_api_key
# OpenAI API key for test environment
TEST_OPENAI_API_KEY=test_openai_key

# Test Configuration
# Enable/disable test database cleanup
TEST_DB_CLEANUP_ENABLED=true
# Enable/disable external service mocking
TEST_MOCK_EXTERNAL_SERVICES=true
# Logging level for tests
TEST_LOG_LEVEL=error